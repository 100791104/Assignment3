<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-danger">
                    <h3 class="text-light">Are you sure you want to delete this workout?</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/delete/<%= workout._id %>" method="POST">
                        <div class="mb-3">
                            <p><strong>Exercise:</strong> <%= workout.exercise %></p>
                        </div>
                        <div class="mb-3">
                            <p><strong>Sets:</strong> <%= workout.sets %></p>
                        </div>
                        <div class="mb-3">
                            <p><strong>Weight:</strong> <%= workout.weight %></p>
                        </div>
                        <div class="mb-3">
                            <p><strong>Reps:</strong> <%= workout.reps %></p>
                        </div>
                        <div class="mb-3">
                            <p><strong>Notes:</strong> <%= workout.notes %></p>
                        </div>
                        <div class="mb-3 d-flex justify-content-between">
                            <input type="submit" name="submit" value="Yes, Delete" class="btn btn-danger btn-lg">
                            <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>

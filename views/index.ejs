<%- include('layout/header') %>

<div class = "container">
    <div class = "row my-4">
        <div class = "col-lg-12">
            <% if (message) { %>
                <div class = "alert alert-dismissible fade show alert-<%= message.type %>" role = "alert">
                    <button class = "btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class = "table-responsive">
                <% if (workoutlist != '') { %>
                    <table class = "table table-striped text-center my-3 mx-auto">
                        <thead>
                            <tr class = "table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Exercise</th>
                                <th class="text-center">Sets</th>
                                <th class="text-center">Weight: lbs</th>
                                <th class="text-center">Reps</th>
                                <th class="text-center">Notes</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% workoutlist.forEach((row, index) => { %>
                                <tr class ="align-middle">
                                    <td class = "text-center"><%= index %></td>
                                    <td class = "text-center"><%= row.exercise %></td>
                                    <td class = "text-center"><%= row.sets %></td>
                                    <td class = "text-center"><%= row.weight %></td>
                                    <td class = "text-center"><%= row.reps %></td>
                                    <td class = "text-center"><%= row.notes %></td>
                                    <td class = "text-center">
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class = "fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>/confirm" class="text-danger"><i class = "fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Workouts Found...</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>